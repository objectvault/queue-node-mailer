{
  "compilerOptions": {
    "lib": ["es2021"],
    "module": "ES2022",
    "moduleResolution": "node",
    "target": "es2021",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist",
    "noImplicitAny": true,
    "baseUrl": "./",
    "paths": {
      "*": ["node_modules/@types/*", "src/types/*"]
    },
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.test.js", "src/types"]
}
